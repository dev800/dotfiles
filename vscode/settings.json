{
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.colorTheme": "Monokai",
  "workbench.iconTheme": "vscode-icons",
  "workbench.editor.labelFormat": "medium",
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  "markdown.preview.fontFamily": "Menlo, Monaco, 'Courier New', monospace",
  "diffEditor.ignoreTrimWhitespace": true,
  "emmet.triggerExpansionOnTab": true,
  "editor.wordWrap": "bounded",
  "editor.accessibilitySupport": "on",
  "editor.acceptSuggestionOnEnter": "smart",
  "editor.quickSuggestions": {
    "other": true,
    "comments": true,
    "strings": true
  },
  "editor.hover.delay": 240,
  "editor.smoothScrolling": true,
  "editor.tabSize": 2,
  "editor.suggestSelection": "first",
  "editor.suggest.localityBonus": true,
  "editor.formatOnSaveTimeout": 600,
  "editor.suggest.shareSuggestSelections": true,
  "eslint.options": {
    // "configFile": "/Users/happy/.dotfiles/lintrc/eslintrc.js",
  },
  "eslint.alwaysShowStatus": true,
  "eslint.packageManager": "yarn",
  "eslint.validate": [
    "javascript",
    "typescript",
    "javascriptreact",
    "vue",
    "html",
    "scss",
  ],
  "vim.textwidth": 180,
  "window.zoomLevel": 0,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "vetur.format.defaultFormatterOptions": {
    "js": "vscode-typescript",
    "ts": "vscode-typescript",
    "prettier": {
      "semi": false,
      "singleQuote": true,
      "bracketSpacing": true,
      "jsxBracketSameLine": true
    }
  },
  "vetur.format.defaultFormatter.ts": "vscode-typescript",
  "vetur.format.defaultFormatter.js": "vscode-typescript",
  "vetur.format.defaultFormatter.html": "js-beautify-html",
  "[scss]": {
    "editor.defaultFormatter": "sibiraj-s.vscode-scss-formatter"
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.format.insertSpaceBeforeFunctionParenthesis": true,
  "javascript.format.insertSpaceAfterConstructor": true,
  "scss.lint.unknownProperties": "ignore",
  "typescript.format.insertSpaceAfterConstructor": true,
  "typescript.format.insertSpaceBeforeFunctionParenthesis": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "terminal.integrated.shell.osx": "/bin/zsh",
  "vsicons.dontShowNewVersionMessage": true,
  "powermode.enabled": true,
  "powermode.enableShake": false,
  "explorer.incrementalNaming": "smart",
  "gitlens.codeLens.enabled": false
}
